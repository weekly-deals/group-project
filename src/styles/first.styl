main-red = #DD2E44;
main-grey = #58595B;
main-white = #F2F2F2;


/** Ultra Light */
@font-face {
  font-family: "San Francisco";
  font-weight: 100;
  src: url("https://applesocial.s3.amazonaws.com/assets/styles/fonts/sanfrancisco/sanfranciscodisplay-ultralight-webfont.woff");
}

/** Thin */
@font-face {
  font-family: "San Francisco";
  font-weight: 200;
  src: url("https://applesocial.s3.amazonaws.com/assets/styles/fonts/sanfrancisco/sanfranciscodisplay-thin-webfont.woff");
}

/** Regular */
@font-face {
  font-family: "San Francisco";
  font-weight: 400;
  src: url("https://applesocial.s3.amazonaws.com/assets/styles/fonts/sanfrancisco/sanfranciscodisplay-regular-webfont.woff");
}

@keyframes fade-out
  from {
    background-color: main-white;
  }
  to {
    background-color: main-grey;
  }

@keyframes fade-in
  from {
    opacity: .2
  }
  to {
    opacity: 1
  }

@keyframes blink
  to{ opactiy: .0 }

[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
  display: none !important;
}

html {
  box-sizing: border-box;
}

*, *:before, *:after {
  box-sizing: inherit;
}

body
  height 100%
  wight 100%
  margin-top 300px
  font-family: 'San Francisco'
  +below(600px)
    font-size 8px

font(x, y)
  font-weight x
  font-size y em

.large-text
  font(400, 3.75)

.small-text
  cursor pointer
  font(200, 1.5)

.medium-text
  font(400, 2.25)
  display: flex
  cursor pointer
  align-self: flex-end

.medium-text2
  font(400, 2.25)
  display: flex
  align-self: flex-end

.light-text
  font(100, 2.25)
  display: flex
  align-self: flex-end

.small-font
  font-size 20px
  font-weight 100

/* index.html styling */

.main-container
  background: main-red

.main-nav-bar
  background-color: transparent
  color: main-white
  position: fixed
  width: 100%
  top: 0
  z-index: 20

.gradient
  position fixed
  z-index 19
  top 0
  height 350px
  width 100%
  background: linear-gradient(main-red, transparent)
  +below(600px)
    height 225px

.style-nav
  margin-left: 20px

.top-nav-tabs
  font(100, 1.75)
  display: flex
  justify-content: space-around
  a
    margin 0
  ul
    padding 0
    margin 10px
  li
    margin 0 60px 0 60px
    cursor pointer
    +below(900px)
      margin 0 30px 0 30px
    +below(650px)
      margin 0 18px 0 18px

/*home-view*/
.home-container
  width: 100%
  background: main-red

.nav-filter
  text-align: center

.nav-bottom
  margin 25px auto 0 auto
  max-width 800px
  display flex
  align-items: flex-end
  flex-direction row
  justify-content space-around

#location-filter
  background: transparent
  border: none
  font-color: main-white
  font(400, 2.5)
  text-align: center
  padding-right: 0
  margin: 0
  height: 50px
  &::placeholder
    color: main-white
    font(400, 1)
  &:focus
    outline none
  +below(600px)
    height 25px

.blinker
  animation: blink 1s infinite
  font-size 36px

.cat-selector
  white-space: none;
  background-color: transparent
  border none
  outline none
  width 20px
  cursor pointer

.cat-option
  color: inherit
  border none
  background-color transparent
  outline none
  border-radius 5px
  margin 5px

.day
  display: flex
  align-self: flex-end

.day-selector
  display flex

.day-options
  display flex
  align-self flex-end
  text-align center
  cursor pointer
  margin-bottom -4px

.day-option
  color main-red
  border main-grey
  border-radius 5px
  margin 2px
  background-color main-white
  outline none
  height 30px
  width 30px
  line-height 20px
  display: flex
  align-self: center
  align-items center
  justify-content center
  font-size 20px
  cursor pointer
  +below(600px)
    height 20px
    width 20px
    font-size 12px
    margin-bottom 6px


h2
  margin 0 auto

h4
  margin 0 auto

li
  display: inline-block

a
  text-decoration: none
  color: main-white

.cat-title
  display flex
  color main-white
  font(400, 2.25)
  span
    margin auto

.deal
  min-width 220px
  height: 300px
  margin 25px
  background: main-white
  border-radius: 5px
  display flex
  flex-direction column
  font-color: main-grey
  font-size: 24px
  font-weight: ultralight
  border 1.8px solid #58595B
  padding-bottom 18px
  &:hover
    animation-fill-mode: forwards
    animation-name: fade-out
    animation-duration .6s
    cursor pointer

.main-deals-container
  margin-top 325px
  +below(600px)
    margin-top -90px

.deal-desc
  display flex
  flex-direction column
  text-align center
  justify-content center
  width 220px
  height 300px
  color main-white
  z-index 20
  &:hover
    animation-fill-mode: forwards
    animation-name: fade-in
    animation-duration .6s
    cursor pointer

.deal-header
  text-align: center
  width: 100%
  height: 20%
  margin-top: 5%

.deal-pic
  display flex
  justify-content center
  align-items center

.deal-footer
  text-align: center
  width: 100%
  height: 20%
  margin auto
  margin-bottom: 3%

.cat-container
  overflow hidden

.deals-container
  display flex
  flex-direction row
  overflow-x auto
  overflow-y hidden
  margin-bottom -20px
  padding-bottom 20px

/*maps-view*/
.modal
  display: block
  position: fixed
  z-index: 100
  left: 0
  top: 0
  width: 60%
  height: 80%
  overflow auto
  overflow-x hidden
  background-color: main-white
  color black
  text-align: center
  margin: 5% 20%
  border-radius: 10px
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1) inset;
