main-red = #DD2E44;
main-grey = #58595B;
main-white = #F2F2F2;

/** Ultra Light */
@font-face {
  font-family: "San Francisco";
  font-weight: 100;
  src: url("https://applesocial.s3.amazonaws.com/assets/styles/fonts/sanfrancisco/sanfranciscodisplay-ultralight-webfont.woff");
}

/** Thin */
@font-face {
  font-family: "San Francisco";
  font-weight: 200;
  src: url("https://applesocial.s3.amazonaws.com/assets/styles/fonts/sanfrancisco/sanfranciscodisplay-thin-webfont.woff");
}

/** Regular */
@font-face {
  font-family: "San Francisco";
  font-weight: 400;
  src: url("https://applesocial.s3.amazonaws.com/assets/styles/fonts/sanfrancisco/sanfranciscodisplay-regular-webfont.woff");
}

[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
  display: none !important;
}
html {
  box-sizing: border-box;
}
*, *:before, *:after {
  box-sizing: inherit;
}

body
  height 100%
  wight 100%
  margin-top 300px
  font-family: 'San Francisco'

font(x,y)
  font-weight x
  font-size y em

.large-text
    font(400, 3.75)
.small-text
    font(200, 1.125)
.medium-text
    font(400, 2.25)
.light-text
    font(100, 2.25)

.main-container
  background: main-red
  height: 200vh

.main-nav-bar
  background-color: transparent
  color: main-white
  position: fixed
  width: 100%
  top: 0
  z-index: 20

.gradient
  position fixed
  top 0
  height 325px
  width 100%
  background: linear-gradient(main-red, transparent)
  +below(600px)
    height 500px

.top-nav-tabs
  font(100, 1.5)
  display: flex
  justify-content: space-between
  padding-right 40px

  /*home-view*/
.home-container
  width: 100%
  background: main-red

.nav-filter
  text-align: center

.nav-bottom
  margin 25px auto 0 auto
  max-width 600px
  display flex
  flex-direction row
  justify-content space-around
  +below(600px)
    flex-direction column
    input
      margin auto

.location-filter
  background: transparent
  border: none
  font-color: main-white
  font(400, 2.5)
  text-align: center
  padding-right: 0
  margin: 0
  height: 50px
  &:focus
    outline none

.cat-selector
  white-space: none;
  background-color: transparent
  border none
  outline none
  width 20px




.cat-option
  color: white
  border none
  background-color transparent
  outline none

.day-options
  display flex

.day-option
  color main-red
  border main-grey
  border-radius 5px
  margin 2px
  background-color main-white
  outline none
  height 30px
  width 30px
  font-size 18px

li
  display: inline-block

a
  text-decoration: none
  color: main-white

.cat-title
  display flex
  color main-white
  font(400, 2.25)
  span
    margin auto

.deal
    min-width 300px
    height: 300px
    margin: 25px
    background: main-white
    border-radius: 5px
    position: relative
    font-family: San Francisco
    font-color: main-grey
    font-size: 24px
    font-weight: ultralight
    
.deal-header
    position: absolute
    top: 0
    text-align: center
    width: 100%
    height: 20%
    margin-top: 5%
    
.deal-footer
    position: absolute
    bottom: 0
    text-align: center
    width: 100%
    height: 20%
    margin-bottom: 3%

.cat-container
  overflow hidden

.deal
    height 300px
    width 300px

.deals-container
    display flex
    flex-direction row
    overflow-x auto
    overflow-y hidden
    margin-bottom -20px
    padding-bottom 20px

/*maps-view*/
.modal
    display: none
    position: fixed
    z-index: 100
    left: 0
    top: 0
    width: 60%
    height: 80%
    overflow auto
    overflow-x hidden
    background-color: main-white
    text-align: center
    margin: 5% 20%
    border-radius: 10px
    font-family: 'San Francisco'
    box-shadow:0 1px 4px rgba(0, 0, 0, 0.3), 0 0 40px rgba(0, 0, 0, 0.1) inset;
    +below(600px)
      margin 0
      width 100%
      height 100%

#modal-curtain
  display none
  height 100%
  width 100%
  top 0
  background-color rgba(50,50,50,0.92)
  position absolute
  z-index 99

.svg-wrapper
  overflow hidden

.svgDisplay
  display flex
  flex-direction row
  overflow-y hidden
  overflow-x auto
  margin-bottom -20px
  padding-bottom 20px
  svg
    min-width 75px

.modal-content
    margin: auto
    display: block
    width: 80%
    max-width: 700px

.data-entry
  text-align: center

.deal-entry
  width: 100%
  margin: auto

.deal-title-input
  border-radius 15px
  height: 30px
  border: none
  margin: 5px
  width: 30%

.day-wrapper
  display: flex
  justify-content: space-between
  width: 30%
  margin: 5px 35%

.day-box
  color: main-white
  background-color: main-red
  border-radius 3px
  height: 23px
  width: 23px

.deal-textarea
  width: 60%
  border-radius: 15px
  margin 5px
  border: none

.bus-entry
  width: 100%

.bus-name-input
  border-radius 15px
  height: 30px
  border: none
  margin: 5px
  width: 50%

#close
    position: absolute
    top: 15px
    right: 35px
    color: #bbb
    font(400, 2.5)
    transition: 0.3s
    &:hover,&:focus
      color: main-grey
      text-decoration: none
      cursor: pointer

.signup-form
